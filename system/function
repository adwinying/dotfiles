# ls after cd
cdll() {
  cd $1;
  ls -l;
}

# pull dotfiles
dotpull() {
  cd $HOME/.dotfiles;
  git pull;
  git submodule update --init --recursive;
}

# temporarily switch to minimal theme
minimalterm() {
  prompt minimal;
}

# git Commit All with Message then Push to remote
gitcamp() {
  git add -A;
  git commit -am $1;
  git push origin master;
}

# Show only current folder path
prompt_dir() {
  prompt_segment blue $PRIMARY_FG " `basename ${PWD/#$HOME/'~'}` "
}
